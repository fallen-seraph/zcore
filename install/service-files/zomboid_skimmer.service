[Unit]
Description=Runs the apa bus stop teleporter script

[Service]
WorkingDirectory=~/Server-Core/tools/
RestartSec=5
Restart=always
ExecStart=/usr/bin/python3 -u ~/Server-Core/tools/tools_skimmer.py
StandardOutput=truncate:~/Server-Core/logs/skim_out.log
StandardError=truncate:~/Server-Core/logs/skim_err.log

[Install]
WantedBy=multi-user.target