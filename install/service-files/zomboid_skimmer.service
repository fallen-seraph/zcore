[Unit]
Description=Runs the apa bus stop teleporter script

[Service]
WorkingDirectory=%h/zcore/tools/
RestartSec=5
Restart=always
ExecStart=/usr/bin/python3 -u %h/zcore/tools/skimmers/log_processsing.py
StandardOutput=truncate:%h/zcore/logs/skim_out.log
StandardError=truncate:%h/zcore/logs/skim_err.log

[Install]
WantedBy=multi-user.target